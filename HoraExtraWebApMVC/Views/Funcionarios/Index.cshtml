@model IEnumerable<HoraExtraWebApMVC.Models.Funcionario>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Funcionarios";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Adicionar Funcionario</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Decricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaDaHoraExtra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorasExtras)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Decricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaDaHoraExtra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorasExtras)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"></a>
                <a asp-action="Detais" asp-route-id="@item.Id"></a>
                <a asp-action="Delete" asp-route-id="@item.Id"></a>
            </td>
        </tr>
        }
    </tbody>


</table> 